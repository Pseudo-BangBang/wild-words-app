{
  "name": "wildwords-backend",
  "version": "1.0.0",
  "description": "Wild Words Backend API with Apollo Server, Knex, and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run"
  },
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "@graphql-tools/schema": "^9.0.16",
    "@graphql-tools/utils": "^9.2.1",
    "@types/bcrypt": "^6.0.0",
    "apollo-server-errors": "^3.3.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.10.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.11.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.4.2",
    "mysql2": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^18.11.19",
    "@types/ws": "^8.5.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
